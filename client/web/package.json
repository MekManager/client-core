{
  "name": "mek-manager",
  "version": "0.1.0",
  "description": "The browser client for the Mek Manager application.",
  "main": "index.js",
  "repository": "git@gitlab.com:mek-manager/mek-manager.git",
  "author": "Eric Hopkins <eric.on.tech@gmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "karma": "karma start --auto-watch",
    "karma:single": "karma start --no-auto-watch --single-run --browsers PhantomJS",
    "lint": "tslint -p . src/**/**/*.ts",
    "merge-check": "yarn run lint && yarn run test:ci",
    "test": "yarn run tsc && yarn run karma",
    "test:mocha": "mocha build/**/specs/*.spec.js",
    "test:mocha:watch": "mocha -w build/**/specs/*.spec.js",
    "test:ci": "yarn run tsc && yarn run test:mocha",
    "test:ci:watch": "yarn run tsc && concurrently \"yarn run tsc:watch\" \"yarn run test:mocha:watch\"",
    "test:watch": "yarn run tsc && concurrently \"yarn run tsc:watch\" \"yarn run karma\"",
    "tsc": "tsc -p ./tsconfig.spec.json",
    "tsc:watch": "tsc -w -p ./tsconfig.spec.json"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/kefir": "^3.7.0",
    "@types/mithril": "^1.1.13",
    "@types/mocha": "^5.2.5",
    "@types/ramda": "^0.25.47",
    "concurrently": "^4.1.0",
    "karma": "^3.1.4",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-rollup-preprocessor": "^6.1.1",
    "karma-typescript": "^3.0.13",
    "rollup": "^0.68.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript2": "^0.18.1",
    "rollup-plugin-uglify": "^6.0.0",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "core-js": "^2.6.1",
    "kefir": "^3.8.5",
    "mithril": "^1.1.6",
    "mocha": "^5.2.0",
    "ramda": "^0.26.1"
  }
}
