{
  "compilerOptions": {
    "target": "es5",
    "outDir": "build/",
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom", "es5", "es2015.collection", "es2015.promise"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
